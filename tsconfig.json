{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@auth": ["src/auth"],
      "@auth/*": ["src/auth/*"],
      "@constants": ["src/constants"],
      "@constants/*": ["src/constants/*"],
      "@common": ["src/common"],
      "@common/*": ["src/common/*"],
      "@config": ["src/config"],
      "@config/*": ["src/config/*"],
      "@email": ["src/email"],
      "@email/*": ["src/email/*"],
      "@user": ["src/user"],
      "@user/*": ["src/user/*"],
      "@util": ["src/util"],
      "@util/*": ["src/util/*"],
    }
  },
  "exclude": ["node_modules", "dist"]
}
